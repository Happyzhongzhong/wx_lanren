.banner{ width: 100%; height: 350rpx;}
.banner swiper{ height: 100%; width: 100%;}
.banner image{ width: 100%; height: 350rpx;}
.pubTile{ display: flex; justify-content: space-between; height: 60rpx; align-items: center; margin-bottom: 40rpx;}
.pubTile .txt{ font-size: 40rpx; height: 100%; position: relative; padding-left: 20rpx ;}
.pubTile .txt::before{display: block; width: 8rpx; height: 34rpx; background: #c8020b; content: "";
position: absolute; left: 0; top: 50%; margin-top: -15rpx;}
.pubTile .more{ font-size: 34rpx; color: #666;}
.selling{ background: #f0f3f8; padding: 90rpx 0 70rpx;}
.seMain{ display: flex; flex-wrap: wrap; justify-content: space-between;}
.seMain .box{ width: 370rpx; height: 214rpx; margin-bottom: 10rpx; position: relative;}
.seMain .pic{width: 100%; height: 100%;}
.seMain .ceng{ width: 100%; height: 100%; background: rgba(0,0,0,0.3); position: absolute; 
top: 0; left: 0; color: #fff; display: flex; flex-direction: column; justify-content: center; align-items: center;}
.dynamic{ padding: 90rpx 0 70rpx;}
.dyItem{ display: flex; padding: 15rpx 0; border: 1rpx dashed #f4f4f4; justify-content: space-between;}
.dyItem .pic{width: 230rpx; height: 150rpx;}
.dyItem .pic image{width: 100%; height: 100%;}
.dyItem .txt{width: 440rpx; display: flex; flex-direction: column; justify-content: space-between;}
.dyItem .title{ font-size: 34rpx;}
.dyItem .info{font-size: 26rpx; color: #888;}